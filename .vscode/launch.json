{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch (auth)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-auth",
            "program": "${workspaceFolder}/Web.Auth/Web.Auth.Api/bin/Debug/net7.0/Web.Auth.Api.dll",
            "cwd": "${workspaceFolder}/Web.Auth/Web.Auth.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}